%p.cntrls
  - fields_for "survey[races_attributes][]", restriction do |form|
    - restriction.id = random_number if restriction.id.nil?
    %label Race:
    = form.select :value, select_options(User::Race)
    = observe_field "survey_races_attributes_#{restriction.try(:id)}_value", :url => demographics_count_users_path, :with => "'&params=' + $('#survey_form').serialize()"
  