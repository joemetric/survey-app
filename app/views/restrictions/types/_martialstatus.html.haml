%p.cntrls
  - fields_for "survey[martial_statuses_attributes][]", restriction do |form|
    %label Martial Status:
    - restriction.id = random_number if restriction.id.nil?
    = form.select :value, select_options(User::MartialStatus), { :include_blank => true }
    = observe_field "survey_martial_statuses_attributes_#{restriction.try(:id)}_value", :url => demographics_count_users_path, :with => "'&params=' + $('#survey_form').serialize()"
  