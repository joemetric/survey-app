%div{:class => 'form lar'}
  
  %h3.heads1 Survey Administration
  %br 
  %ul.survey_toggle 
    %li= link_to 'Active Surveys', admin_surveys_path(:survey_type => 'published')
    %li= link_to 'Pending Surveys', admin_surveys_path(:survey_type => 'pending')
    %li= link_to 'Finished Surveys', admin_surveys_path(:survey_type => 'finished')

  %br
  %h4.head2= "#{@survey_status.capitalize} Surveys"
  
  #overview
  
  %table#table.sortable{ :cellpadding => 0 , :cellspacing => 0, :border => 0}
    %thead
      %tr
        %th{ :width => 170 }
          %h3 Survey Name
        %th{ :width => 120 }
          %h3 Username
        %th{ :width => 120 }
          %h3 Last name  
        %th
          %h3 Date Submitted
        %th
          %h3 Issue Refund  
    %tbody
      = render :partial => "/admin/surveys/survey", :collection => @surveys

#mask

#boxes
  #dialog.window 


= sortable_table_js 
