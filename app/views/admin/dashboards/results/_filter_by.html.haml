%table{:cellpadding => 0, :cellspacing => 0, :border => 0, :id => 'table', :class => 'sortable'}
  %thead
    %tr
      %th
        %h3
          = @filter_by
      %th
        %h3 # of Users
  %tbody
    - if @filter_by == 'Age'
      - @filters.each do |f|
        %tr
          %td
            = f[0]
          %td
            = f[1]
    - else
      - @filters.keys.sort.each do |f|
        %tr
          %td
            = @filters[f]
          %td
            = @results.count {|u| u.send(@filter_column) == f}
      
    