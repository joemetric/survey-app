%p.normal
  %label.label2 Base Cost:
  = text_field :package, :base_cost, :value => @package.base_cost.to_decimal

%p.normal
  %label.label2 Responses:
  = select(:package, :total_responses, select_integer)

%p.normal
  %label Upto:
  = select('pricings[1]', 'total_questions', select_integer)
  %label.label2 Standard Questions priced at:
  = text_field 'pricings[1]', 'standard_price', :value => @pricings[0].try(:standard_price).to_decimal
  %label.label2 Normally:
  = text_field 'pricings[1]', 'normal_price', :value => @pricings[0].try(:normal_price).to_decimal

