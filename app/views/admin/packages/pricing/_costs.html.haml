%p.normal
  %label.label2 Base Cost:
  = text_field :package, :base_cost, :value => number_with_precision(@package.base_cost.to_decimal, :precision => 2), :style=>"width:33px;"

%p.normal
  %label.label2 Responses:
  = text_field :package, :total_responses

%p.normal
  %label up to:
  = select('pricings[1]', 'total_questions', select_integer, :selected => @pricings[0].try(:total_questions))
  %label.label2 Standard Questions priced at:
  = text_field 'pricings[1]', 'standard_price', :value => number_with_precision(@pricings[0].try(:standard_price).to_decimal, :precision => 2)
  %label.label2 Normally:
  = text_field 'pricings[1]', 'normal_price', :value => number_with_precision(@pricings[0].try(:normal_price).to_decimal, :precision => 2)

